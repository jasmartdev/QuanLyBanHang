<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" />
            <gradient android:centerColor="@color/colorLightBlueBright" android:endColor="@color/colorLightBlueBright" android:startColor="@color/colorLightBlueBright" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" />
            <gradient android:centerColor="@color/colorLightBlueLight" android:endColor="@color/colorLightBlueLight" android:startColor="@color/colorLightBlueLight" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" />
            <gradient android:centerColor="@color/colorLightBlueDark" android:endColor="@color/colorLightBlueDark" android:startColor="@color/colorLightBlueDark" />
        </shape>
    </item>
</selector>