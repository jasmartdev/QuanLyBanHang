<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" />
            <gradient android:centerColor="@color/colorStrongBlueBright" android:endColor="@color/colorStrongBlueBright" android:startColor="@color/colorStrongBlueBright" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" />
            <gradient android:centerColor="@color/colorStrongBlueLight" android:endColor="@color/colorStrongBlueLight" android:startColor="@color/colorStrongBlueLight" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" />
            <gradient android:centerColor="@color/colorStrongBlueDark" android:endColor="@color/colorStrongBlueDark" android:startColor="@color/colorStrongBlueDark" />
        </shape>
    </item>
</selector>