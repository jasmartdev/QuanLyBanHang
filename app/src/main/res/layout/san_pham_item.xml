<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/quanly_margin">

    <TextView
        android:id="@+id/tv_ten_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết nối mạng"
        android:textSize="@dimen/label_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_so_luong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_ten_sp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/tv_ten_sp"
        android:text="Số lượng 2"
        android:textSize="@dimen/label_size" />

    <TextView
        android:id="@+id/tv_tri_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ten_sp"
        android:text="Giá gốc: 100000vnđ"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_con_hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tri_gia"
        android:text="Còn hàng/Hết hàng"
        android:textStyle="bold" />
</RelativeLayout>